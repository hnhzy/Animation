<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_tm"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="透明"
        app:layout_constraintEnd_toStartOf="@+id/btn_sf"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_sf"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="缩放"
        app:layout_constraintEnd_toStartOf="@+id/btn_xz"
        app:layout_constraintStart_toEndOf="@+id/btn_tm" />

    <Button
        android:id="@+id/btn_xz"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="旋转"
        app:layout_constraintEnd_toStartOf="@+id/btn_py"
        app:layout_constraintStart_toEndOf="@+id/btn_sf" />

    <Button
        android:id="@+id/btn_py"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="平移"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_zh"
        app:layout_constraintStart_toEndOf="@+id/btn_xz" />

    <Button
        android:id="@+id/btn_zh"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="组合"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_py" />

    <ImageView
        android:id="@+id/imv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_xz" />


</android.support.constraint.ConstraintLayout>