<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hzy.animationdeom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrameAnimationActivity"
            android:label="@string/title_activity_frame_animation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TweenAnimationActivity"
            android:label="@string/title_activity_tween_animation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PropertyAnimationActivity"
            android:label="@string/title_activity_property_animation"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>